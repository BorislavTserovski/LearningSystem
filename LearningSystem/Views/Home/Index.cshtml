@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Welcome to our Learning System!</h1>

<div class="row">
    <form asp-action="Search">
        <div class="col-md-6">
            <input asp-for="SearchText" class="form-control" placeholder="Search..." />
        </div>
        <div class="col-md-2">
            <input asp-for="SearchInCourses" /> 
            <label asp-for="SearchInCourses"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="SearchInUsers" />
            <label asp-for="SearchInUsers"></label>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-primary pull-right" value="Search" />
        </div>
       
    </form>
</div>
<div class="row">
    @foreach (var course in Model.Courses)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                    <a asp-area="" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                    </h3>
                </div>
                <div class="panel-body">
                    @course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()
                </div>
            </div>
        </div>

    }
</div>
